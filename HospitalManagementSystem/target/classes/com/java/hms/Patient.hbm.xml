<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.java.hms.Patient" table="Patient">
		<id name="patientId" type="int">
			<column name="PatientId"/>
			<generator class="increment"/>
		</id>
		
		<property name="patientName" type="java.lang.String">
			<column name="PatientName"/>
		</property>
		<property name="age" type="int">
			<column name="Age"/>
		</property>
		<property name="gender" type="java.lang.String">
			<column name="Gender"/>
		</property>
		<property name="patientAddress" type="java.lang.String">
			<column name="PatientAddress"/>
		</property>
		<property name="disease" type="java.lang.String">
			<column name="Disease"/>
		</property>
		<property name="patientPhone" type="long">
			<column name="PatientPhone"/>
		</property>
	</class>
</hibernate-mapping>